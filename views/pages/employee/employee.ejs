<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="landing page for employees after logging in">
    <meta name="author" content="Scott Corbitt">

    <title>Employee Portal</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-switch.css">
    <link rel="stylesheet" href="/css/backend/backend.css">

    <!-- Bootstrap core CSS -->
    <!-- <link href="/css/employee.css" rel="stylesheet"> -->

    <!-- Custom fonts for this template -->
    <link href="//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Plugin CSS -->
    <link href="vendor/magnific-popup/magnific-popup.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <!-- <link href="/css/landing-page.css" rel="stylesheet"> -->
    <!-- <link href="/css/creative.css" rel="stylesheet"> -->

  </head>

  <body id="page-top">
    <%- include ../../partials/backend-nav.ejs %>
    <!-- Header -->
    <div id="manager" class="manager">
      <header class="intro-header">
        <div class="container">
          <div class="intro-message">
            <h1>Employee Portal</h1>
            <hr class="intro-divider">
            <ul class="list-inline intro-social-buttons">
              <% for(var i = 0; i < accreditations.length; i++) { %>
                <li class="list-inline-item">
                  <a href="/employee/accreditation/<%= accreditations[i].id %>" class="btn btn-secondary btn-lg">
                    <i class="fa"></i>
                    <span class="network-name"><%= accreditations[i].title %></span>
                  </a>
                </li>
              <% } %>
              <br>
              <% for(var i = 0; i < accreditations.length; i++) { %>
                <% if(user.roles.indexOf(accreditations[i].id) >= 0) { %>
                <li class="list-inline-item">
                  <a href="/employee/supervisor/<%= accreditations[i].id %>" class="btn btn-secondary btn-lg">
                    <i class="fa"></i>
                    <span class="network-name">Supervisor: <%= accreditations[i].title %></span>
                  </a>
                </li>
                <% } %>
              <% } %>
            </ul>
          </div>
        </div>
      </header>
    </div>


    <!-- jQuery -->
    <!-- <script src="/js/jquery-2.2.3.min.js"></script> -->
    <script src="/vendor/jquery/jquery.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

  </body>
  </html>
